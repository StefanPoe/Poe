<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgblack"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:background="@drawable/yellow_border" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="30dp"
                android:textAlignment="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/pfp"
                android:id="@+id/uploadImage"
                android:layout_marginTop="10dp"
                 />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadName"
                android:background="@drawable/yellow_border"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Name"
                android:gravity="start|center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadAge"
                android:background="@drawable/yellow_border"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Age"
                android:gravity="start|center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadCity"
                android:background="@drawable/yellow_border"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="City"
                android:gravity="start|center_vertical"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadSkill"
                android:background="@drawable/yellow_border"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Work Field / Skills"
                android:gravity="start|center_vertical"/>

            <EditText
                android:id="@+id/uploadEducation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/yellow_border"
                android:gravity="start|center_vertical"
                android:hint="Education"
                android:padding="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadSalary"
                android:background="@drawable/yellow_border"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint=" Requested Wage (per month)"
                android:gravity="start|center_vertical"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/uploadType"
                android:background="@drawable/yellow_border"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="Job Type"
                android:gravity="start|center_vertical"/>
<EditText
            android:id="@+id/uploadmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:hint="Contact Email"
            android:textColorLink="@color/purple"
            android:textSize="18sp"
            android:autoLink="email"
            app:cornerRadius="20dp" />

            <EditText
                android:id="@+id/uploadphone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:textColorLink="@color/purple"
                android:hint="Contact Phone Number"
                android:textSize="18sp"
                android:autoLink="phone"
                app:cornerRadius="20dp" />


            <EditText
                android:id="@+id/uploadCV"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:textColorLink="@color/purple"
                android:hint="Upload CV link (Download / Drive link)"
                android:textSize="18sp"
                android:autoLink="web"
                app:cornerRadius="20dp" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:id="@+id/saveButton"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "20dp"
                android:layout_marginBottom="60dp"/>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>