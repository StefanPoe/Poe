<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgdetails"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/detailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="12dp"
        android:text="name"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/detailImage"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/pfp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailAge"
        android:text="Age:"
        android:layout_marginTop="9dp"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailCity"
        android:text="City:"
        android:layout_marginTop="0dp"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailSkill"
        android:text="Skills:"
        android:layout_marginTop="0dp"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailEducation"
        android:text="Education:"
        android:layout_marginTop="0dp"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailSalary"
        android:text="Salary Range:"
        android:layout_marginTop="0dp"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailType"
        android:text="Job Type:"
        android:layout_marginTop="0dp"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailCV"
        android:text="CV link:"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="0dp"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vermail"
        android:text="CV link:"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:textSize="0sp"
        android:layout_gravity="center"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Contact"
        android:textStyle="italic"
        android:layout_marginTop="0dp"
        android:textSize="29sp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"/>

    <TextView
        android:id="@+id/detailEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="9dp"
        android:text="Contact Email:"
        android:textSize="19sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailPhone"
        android:text="Phone number:"
        android:layout_marginTop="0dp"
        android:textSize="19sp"
        android:layout_gravity="center"
        android:layout_marginBottom="9dp"/>


</LinearLayout>